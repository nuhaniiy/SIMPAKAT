<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:src="@drawable/ic_person_outline_black_24dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="14dp"
                android:paddingStart="17dp"
                android:paddingLeft="17dp">

                <TextView
                    android:id="@+id/tv_nama_karyawan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="Rudi Setiawan"
                    android:textColor="#FF4A4A4A"/>

                <TextView
                    android:id="@+id/tv_jabatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginTop="4dp"
                    android:text="Dosen - Sistem Informasi"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/icon_see_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_remove_red_eye_green"/>
            <!--            <ImageView-->
            <!--                android:id="@+id/options"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                app:srcCompat="@drawable/ic_more_vert_black_24dp"-->
            <!--                android:tint="#8A000000"-->
            <!--                android:layout_marginTop="8dp"-->
            <!--                android:layout_marginRight="8dp"-->
            <!--                android:layout_marginEnd="8dp"-->
            <!--                android:paddingLeft="20dp"-->
            <!--                android:paddingStart="20dp"-->
            <!--                />-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>